                        <option value="Sør">Sør</option>
                        <option value="Ter">Ter</option>
                        <option value="Ume">Ume</option>
                    </select> -->
                <!-- </div> -->
                <input type="submit" value="Registrer">
            </form>
        </div>
    </div>
    
    <%- include('partials/footer') %>
</body>
</html>